# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Cursor AI Hub"

# API Keys (Add your keys here)
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_ACCESS_TOKEN=your_github_token_here

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/cursor_hub

# Authentication (if needed)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_API_MOCKING=true

# Logging
LOG_LEVEL=debug

# Documentation
# This file serves as a template for environment variables needed by the application.
# Copy this file to .env.local and fill in your values.
# Never commit actual .env files to version control.

# Advertisement Configuration
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=your-adsense-id
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Optional - Advanced Ad Configuration
NEXT_PUBLIC_AD_REFRESH_RATE=30
NEXT_PUBLIC_MAX_ADS_PER_PAGE=3 